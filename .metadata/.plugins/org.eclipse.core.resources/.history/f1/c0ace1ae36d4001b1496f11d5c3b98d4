package jo;

public class BInarySum {
	static String check(int[] arr)
	{
		int[] newarr=new int[] {};
		int n=arr.length;
	for(int i=0;i<n;i++)
	{
		if(arr[i]==0)
		{
			arr[i]=-1;
		}
		
	}
	
	String s=Arrays.toString(arr);
	return s;
	}
	
	
	public static void main(String[] args)
	{
		int[] arr= {1,0,0,1,0,1,1,1};
		check(arr);
	}

}
